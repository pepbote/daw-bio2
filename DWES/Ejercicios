-EJERCICIO 4

public class EX_04 {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.println("Intoduce una frase:");
        String frase = scanner.nextLine();
        System.out.println("Intoduce un caracter:");
        char caracterBuscado = scanner.nextLine().charAt(0);
        int indice= frase.indexOf(caracterBuscado);
        int contador = 0;

        while (indice != -1) {
            System.out.println("El caracter " + caracterBuscado +  " se euncuentra en la posici√≥n: "+ indice);
            indice = frase.indexOf(caracterBuscado, indice + 1);
            contador++;
        }
        
        if (contador==0) {
            System.out.println("'" + caracterBuscado + "' no se encuentra en la cadena.");
        }
        scanner.close();
        }
        }
        
