public class Main {
    public static void main(String[] args) {
        String cadena = "mecmecmec";
        char letraBuscada = 'e';
        
        int posicion = cadena.indexOf(letraBuscada);
        int contador = 0;
        
        while (posicion != -1) {
            System.out.println("La posición de '" + letraBuscada + "' en la cadena es: " + posicion);
            // Busca la siguiente ocurrencia a partir de la posición actual + 1
            posicion = cadena.indexOf(letraBuscada, posicion + 1);
            contador++;
        }
        
        if (contador == 0) {
            System.out.println("'" + letraBuscada + "' no se encontró en la cadena.");
        } else {
            System.out.println("Se encontraron " + contador + " ocurrencias de '" + letraBuscada + "'.");
        }
    }
}
