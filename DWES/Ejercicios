-EJERCICIO 3

<!DOCTYPE html>
<html>
    <head>
    </head>
    <body>
    <h1>Ejercicio3</h1>
        <p>
            <?php
                $paises = [
                   'ESP' => array('nombre' => 'España', 'codigo' => 724),
                   'AUS' => array('nombre' => 'Australia', 'codigo' => 231),
                   'FRA' => array('nombre' => 'Francia', 'codigo' => 123),
                   'FJI' => array('nombre' => 'Fiyi', 'codigo' => 421),
                   'GTM' => array('nombre' => 'Guatemala', 'codigo' => 412),
                   'DEU' => array('nombre' => 'Alemania', 'codigo' => 588),
                   'AGO' => array('nombre' => 'Angola', 'codigo' => 666),
                   'AND' => array('nombre' => 'Andorra', 'codigo' => 421),
                   'PRT' => array('nombre' => 'Portugal', 'codigo' => 635),
                   'HTI' => array('nombre' => 'Haití', 'codigo' => 332)
                ];

            foreach($paises as $pais => ['nombre' => $nombre, 'codigo' => $codigo]) {
                echo 'El país ' . $nombre . ' utiliza el código alfa-3 ' . $pais . ' con código numérico: ' . $codigo . '<br />';
            }
            ?>
        </p>
    </body>
</html>


-EJERCICIO 7

<!DOCTYPE html>
<html>
<head>
    <style>
        .tablero {
            width: 240px;
            height: 240px;
            border-collapse: collapse;
        }

        .casillas {
            width: 30px;
            height: 30px;
            text-align: center;
            vertical-align: middle;
            font-size: 20px;
            font-weight: bold;
        }

        .blanco {
            background-color: #fff;
        }

        .negro {
            background-color: #000;
            color: #fff;
        }
    </style>
</head>
<body>
<table class="tablero" border="1">
    <?php
    $esBlanco = true;

    for ($fila = 1; $fila <= 8; $fila++) {
        echo "<tr>";

        for ($col = 1; $col <= 8; $col++) {
            $class = $esBlanco ? 'blanco' : 'negro';
            echo "<td class='$class'></td>";
            $esBlanco = !$esBlanco;
        }
        $esBlanco = !$esBlanco;

        echo "</tr>";
    }
    ?>
</table>
</body>
</html>
